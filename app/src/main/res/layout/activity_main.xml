<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282B35"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:fontFamily="@font/boule"
        android:text="Examen"
        android:textColor="#ED2A6C"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/EditTextvalor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextvalor1"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:layout_marginBottom="64dp"
        android:background="#373A47"
        android:ems="10"
        android:fontFamily="@font/fuente"
        android:hint="Numero"
        android:inputType="textPersonName"
        android:textColor="#C8C1C1"
        android:textColorHint="#C8C1C1"
        app:layout_constraintBottom_toTopOf="@+id/ValorCompu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/BarraProgreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="22dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#ED2A6C"
        android:text="Jugar!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPorcentaje"
        android:layout_width="117dp"
        android:layout_height="28dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/BarraProgreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ValorCompu"
        android:layout_width="282dp"
        android:layout_height="26dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/fuente"
        android:text="Valor fenerado automaticamente"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtPorcentaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resul"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:text="..."
        android:textAlignment="center"
        android:textColor="#F3F0F0"
        app:layout_constraintBottom_toTopOf="@+id/EditTextvalor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>